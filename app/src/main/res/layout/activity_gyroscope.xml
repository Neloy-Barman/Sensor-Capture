<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acc_lin"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_constrainedHeight="true"
    tools:context=".activity_gyroscope">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/gyro_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_7sdp"
                android:text="Gyroscope values"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold">
            </TextView>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time vs X-axis Gyro"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp">
            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gy_x"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_500sdp"
                android:layout_marginTop="@dimen/_10sdp">
            </com.github.mikephil.charting.charts.LineChart>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time vs Y-axis Gyro"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="@dimen/_5sdp">
            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gy_y"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_500sdp"
                android:layout_marginTop="@dimen/_10sdp">
            </com.github.mikephil.charting.charts.LineChart>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time vs Z-axis Gyro"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="@dimen/_5sdp">
            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/gy_z"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_500sdp"
                android:layout_marginTop="@dimen/_10sdp">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
